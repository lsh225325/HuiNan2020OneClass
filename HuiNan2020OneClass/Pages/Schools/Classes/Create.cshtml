@page
@model HuiNan2020OneClass.Pages.Classes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>新增班级</h1>

<hr />
<p>
    <a class="text-danger">@Model.ErrMsg</a>
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassAndTerm.ClassNuberID" class="control-label">班</label>
                <select asp-for="ClassAndTerm.ClassNuberID" class ="form-control" asp-items="ViewBag.ClassNuberID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClassAndTerm.GradeID" class="control-label">年级</label>
                <select asp-for="ClassAndTerm.GradeID" class ="form-control" asp-items="ViewBag.GradeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClassAndTerm.SchoolTermID" class="control-label">学期</label>
                <select asp-for="ClassAndTerm.SchoolTermID" class ="form-control" asp-items="ViewBag.SchoolTermID"></select>
            </div>
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ClassAndTerm.IsCurrentClass" /> 设为本学期？
                </label>
            </div>
            
           
            
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
