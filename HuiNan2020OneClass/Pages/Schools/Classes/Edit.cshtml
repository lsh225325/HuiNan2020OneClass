@page
@model HuiNan2020OneClass.Pages.Classes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>修改</h1>

<h4>班级</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassAndTerm.ClassNuberID" class="control-label">班</label>
                <select asp-for="ClassAndTerm.ClassNuberID" class="form-control" asp-items="ViewBag.ClassNuberID"></select>
                <span asp-validation-for="ClassAndTerm.ClassNuberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassAndTerm.GradeID" class="control-label">年级</label>
                <select asp-for="ClassAndTerm.GradeID" class="form-control" asp-items="ViewBag.GradeID"></select>
                <span asp-validation-for="ClassAndTerm.GradeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassAndTerm.SchoolTermID" class="control-label">学期</label>
                <select asp-for="ClassAndTerm.SchoolTermID" class="form-control" asp-items="ViewBag.SchoolTermID"></select>
                <span asp-validation-for="ClassAndTerm.SchoolTermID" class="text-danger"></span>
            </div>
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ClassAndTerm.IsCurrentClass" /> 设为本学期？
                </label>
            </div>
            <input type="hidden" asp-for="ClassAndTerm.ID" />
            
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
