@page
@model HuiNan2020OneClass.Pages.ClassIncomes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>修改班费</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassIncome.ClassAndTermID" class="control-label">班级</label>
                <select asp-for="ClassIncome.ClassAndTermID" class="form-control" asp-items="ViewBag.ClassAndTermID"></select>
                <span asp-validation-for="ClassIncome.ClassAndTermID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassIncome.ReData" class="control-label"></label>
                <input asp-for="ClassIncome.ReData" class="form-control" />
                <span asp-validation-for="ClassIncome.ReData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassIncome.Rdmark" class="control-label"></label>
                <input asp-for="ClassIncome.Rdmark" class="form-control" />
                <span asp-validation-for="ClassIncome.Rdmark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassIncome.EveryoneMoney" class="control-label">每人交费</label>
                <input asp-for="ClassIncome.EveryoneMoney" class="form-control" />
                <span asp-validation-for="ClassIncome.EveryoneMoney" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassIncome.Count" class="control-label">总人数</label>
                <input asp-for="ClassIncome.Count" class="form-control" />
                <span asp-validation-for="ClassIncome.Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassIncome.Money" class="control-label">总金额</label>
                <input asp-for="ClassIncome.Money" class="form-control" />
                <span asp-validation-for="ClassIncome.Money" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="ClassIncome.ID" />
            <input type="hidden" asp-for="ClassIncome.CategoryID" />

            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
