@page
@model HuiNan2020OneClass.Pages.Report.IncomeReportModel
@{
    ViewData["Title"] = "Index";
}

<h1>班费收入清单</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                收取日期
            </th>
            <th>
                总金额
            </th>
            <th>
                学期
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ClassIncome[0].Rdmark)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ClassIncome) {
        <tr>
            <td>
                
                    @Html.DisplayFor(modelItem => item.ReData)
                
            </td>
            <td>
                
                    @Html.DisplayFor(modelItem => item.Money)
                
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.classAndTerm.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Rdmark)
            </td>            
        </tr>
}
    </tbody>
</table>
